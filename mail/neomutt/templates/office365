set realname = "TODO"
set from = "TODO"

set imap_user = "TODO"
set imap_pass = "TODO"
set folder = "imaps://$imap_user@outlook.office365.com/"
set spoolfile = "+INBOX"
set record = "+Sent Items"
set postponed = "+Drafts"
set trash = "+Deleted Items"
named-mailboxes "gatech" "+INBOX"

# unmailboxes * 

set smtp_url = "smtp://$imap_user:$imap_pass@outlook.office365.com:587"

macro index,pager I <change-folder>=<tab><enter>
macro index,pager O <change-folder>=Sent<tab><enter>
macro index,pager S <tag-prefix><save-message>=Archive<tab><enter>
macro index,pager A <change-folder>=Archive<tab><enter> 

account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
